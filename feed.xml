---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>{{ post.excerpt | xml_escape }} {{ post.content | markdownify | strip_html | xml_escape }}</description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <image>
            <url>{{post.img | prepend: '/' | prepend: site.baseurl | prepend: site.url }}</url>
            <title>{{post.title}}</title>
        </image>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
        {% for cat in post.categories %}
        <category>{{ cat | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
    <!-- adding pages to feed for complete search -->
    {% for page in site.pages %}
      {% unless page.url contains "feed" or page.url contains "index" %}
      <item>
        <title>{{ page.title | xml_escape }}</title>
        <description> {{ page.excerpt | xml_escape }} {{ page.content | markdownify | strip_html | xml_escape }}</description>
        <link>{{ page.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ page.url | prepend: site.baseurl | prepend: site.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
    <!-- Including links as resources to make them searchable -->
    {% for link in site.data.content.links %}
      <item>
        <title>{{ link.title | xml_escape }}</title>
        <description> {{ link.description | xml_escape }}</description>
        <link>{{ link.href }}</link>
      </item>
    {% endfor %}
  </channel>
</rss>
